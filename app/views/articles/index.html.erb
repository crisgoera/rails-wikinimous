<h2>Article index</h2>

<ul>
  <% @articles.each do |article| %>
    <li><%= link_to "#{article.title}", article_path(article.id) %> <%= link_to 'Remove', article_path(article.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %></li>
    <li><%= article.content %></li>
    <br>
  <% end %>
</ul>


